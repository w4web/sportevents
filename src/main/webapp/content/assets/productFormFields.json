[
  {
    "fieldGroupClassName": "row",
    "fieldGroup": [
      {
        "key": "id",
        "type": "input",
        "className": "productId col-lg-3 col-4",
        "defaultValue": 0,
        "templateOptions": {
          "label": "Id",
          "required": true
        },
        "expressionProperties": {
          "templateOptions.disabled": "model.id"
        }
      },
      {
        "className": "col-4",
        "key": "name",
        "type": "input",
        "templateOptions": {
          "label": "Product Name",
          "required": true,
          "placeholder": "Must be at least 6 characters",
          "minLength": 6
        }
      },
      {
        "className": "col-lg-3 col-4",
        "key": "price",
        "type": "input",
        "templateOptions": {
          "type": "number",
          "label": "Price",
          "required": true
        }
      }
    ]
  },
  {
    "template": "<hr />"
  },
  {
    "fieldGroupClassName": "row",
    "fieldGroup": [
      {
        "className": "col-lg-10",
        "type": "input",
        "key": "image",
        "templateOptions": {
          "label": "Upload image"
        }
      }
    ]
  },
  {
    "fieldGroupClassName": "row",
    "fieldGroup": [
      {
        "className": "col-lg-5 col-6",
        "key": "productSize",
        "type": "select",
        "defaultValue": "XL",
        "templateOptions": {
          "label": "Product size",
          "options": [
            {
              "label": "M",
              "value": "M"
            },
            {
              "label": "S",
              "value": "S"
            }
          ],
          "required": true
        }
      },
      {
        "className": "col-lg-5 col-6",
        "key": "productCategory",
        "type": "select",
        "templateOptions": {
          "label": "Product category",
          "options": [
            {
              "label": "category 1",
              "value": "category1"
            },
            {
              "label": "category 2",
              "value": "category2"
            }
          ]
        }
      }
    ]
  },
  {
    "template": "<hr />"
  },
  {
    "fieldGroupClassName": "row",
    "fieldGroup": [
      {
        "className": "col-lg-10",
        "type": "textarea",
        "key": "description",
        "templateOptions": {
          "label": "Description",
          "required": true
        }
      }
    ]
  }
