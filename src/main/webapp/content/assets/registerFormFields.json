  {
    "type": "checkbox",
    "key": "termsAndConditions",
    "wrappers": ["termsAndConditions"],
    "templateOptions": {
      "label": "I agree to the",
      "required": true
    }
  },
  {
    "className": "mb-2 d-block",
    "type": "checkbox",
    "key": "privacyConditions",
    "wrappers": ["privacyConditions"],
    "templateOptions": {
      "label": "I agree to the",
