            },
            {
              "label": "144",
              "value": "144"
            },
            {
              "label": "145",
              "value": "145"
            }
          ]
        }
      },
      {
        "className": "col-4",
        "key": "weight",
        "type": "select",
        "templateOptions": {
          "label": "Weight",
          "options": [
            {
              "label": "40",
              "value": "40"
            },
            {
              "label": "41",
              "value": "41"
            },
            {
              "label": "42",
